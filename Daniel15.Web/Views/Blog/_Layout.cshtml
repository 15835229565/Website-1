@model ViewModelBase

@{
	// "Inherit" from the base layout
	Layout = "~/Views/Shared/_Layout.cshtml";
	Model.SidebarType = SidebarType.Right;
}

@RenderBody()

@section sidebar
{
	@Html.BlogSidebar()
}

@section extraHead
{
	<link rel="index" title="@Model.BlogName" href="@Url.Action(MVC.Blog.Index())" />
	@RenderSection("extraHead", required: false)
}

@section extraFoot
{
	@Html.Partial(MVC.Blog.Views._DisqusCount, Model.DisqusShortname)
	@RenderSection("extraFoot", required: false)
}